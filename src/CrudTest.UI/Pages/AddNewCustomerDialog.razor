@using Google.Protobuf.WellKnownTypes
@using System.Text
@using System.Globalization
@using CrudTest.UI.Services
<MudDialog >
    <DialogContent >
        <MudStack>
            <MudTextField T="string" @bind-Value="CreateNewCustomerRequest.FirstName" Variant="Variant.Outlined" Label="FirstName"></MudTextField>
            <MudTextField T="string" @bind-Value="CreateNewCustomerRequest.LastName" Variant="Variant.Outlined" Label="LastName"></MudTextField>
            <MudTextField T="string" @bind-Value="CreateNewCustomerRequest.PhoneNumber" Variant="Variant.Outlined" Label="PhoneNumber"></MudTextField>
            <MudTextField T="string" @bind-Value="CreateNewCustomerRequest.Email" Variant="Variant.Outlined" Label="Email"></MudTextField>
            <MudTextField T="string" @bind-Value="CreateNewCustomerRequest.BankAccountNumber" Variant="Variant.Outlined" Label="BankAccountNumber"></MudTextField>
            <MudDatePicker Variant="Variant.Outlined" Label="DateOfBirth" @bind-Date="DateOfBirth" PickerVariant="PickerVariant.Dialog"/>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton Size="Size.Large" Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
        <MudButton Size="Size.Large" Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; }

    CreateNewCustomerRequest CreateNewCustomerRequest = new();
    DateTime? DateOfBirth = DateTime.Today.AddDays(-1);

    private async Task Submit()
    {
        try
        {
            CreateNewCustomerRequest.DateOfBirth = Timestamp.FromDateTime(DateTime.SpecifyKind(DateOfBirth.Value, DateTimeKind.Utc));
            Console.WriteLine("CreateNewCustomerRequest " + CreateNewCustomerRequest.FirstName);

            var result = await CustomerContract.CreateNewCustomerAsync(CreateNewCustomerRequest);
            Console.WriteLine("test2 " + result.Id);

            MudDialog.Close(DialogResult.Ok(new KeyValuePair<bool, string>(true, "OK")));
        }
        catch (Exception e)
        {
            Console.WriteLine(e.Message);
            MudDialog.Close(DialogResult.Ok(new KeyValuePair<bool, string>(false, e.Message.GetCorrectExceptionMessage())));
        }
    }

    private void Cancel() => MudDialog.Cancel();
    



}